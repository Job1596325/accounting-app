/**app.wxss**/
:root {
  --primary-color: #2563eb;
  --primary-dark: #1d4ed8;
  --success-color: #10b981;
  --danger-color: #ef4444;
  --warning-color: #f59e0b;
  --text-primary: #1e293b;
  --text-secondary: #64748b;
  --text-tertiary: #94a3b8;
  --bg-light: #f8fafc;
  --bg-lighter: #f1f5f9;
  --border-color: #e2e8f0;
}

page {
  background-color: #f8fafc;
  color: #1e293b;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
  font-size: 14px;
}

.container {
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.content {
  flex: 1;
  overflow-y: auto;
  padding: 16px;
}

/* 卡片样式 */
.card {
  background: white;
  border-radius: 12px;
  padding: 16px;
  margin-bottom: 16px;
  border: 1px solid #e2e8f0;
}

.card-title {
  font-size: 16px;
  font-weight: 600;
  margin-bottom: 12px;
  color: #1e293b;
}

/* 按钮样式 */
.btn {
  display: inline-block;
  padding: 10px 16px;
  border-radius: 8px;
  font-weight: 500;
  font-size: 14px;
  text-align: center;
  border: none;
  cursor: pointer;
  transition: all 0.2s;
}

.btn-primary {
  background: linear-gradient(135deg, #2563eb 0%, #1d4ed8 100%);
  color: white;
}

.btn-primary:active {
  opacity: 0.8;
}

.btn-secondary {
  background: #f1f5f9;
  color: #475569;
}

.btn-secondary:active {
  background: #e2e8f0;
}

.btn-danger {
  background: #fee2e2;
  color: #dc2626;
}

.btn-danger:active {
  background: #fecaca;
}

.btn-block {
  width: 100%;
  display: block;
  margin-top: 12px;
}

/* 表单 */
.form-group {
  margin-bottom: 16px;
}

.form-label {
  display: block;
  font-size: 13px;
  font-weight: 600;
  margin-bottom: 8px;
  color: #475569;
}

input,
textarea,
.picker {
  width: 100%;
  padding: 10px 12px;
  border: 1px solid #e2e8f0;
  border-radius: 8px;
  font-size: 14px;
  font-family: inherit;
  background: white;
}

input:focus {
  border-color: #2563eb;
  background: #f8fafc;
}

/* 列表 */
.list-item {
  display: flex;
  align-items: center;
  padding: 12px 0;
  border-bottom: 1px solid #f1f5f9;
  gap: 12px;
}

.list-item:last-child {
  border-bottom: none;
}

.list-icon {
  width: 40px;
  height: 40px;
  border-radius: 10px;
  background: #f1f5f9;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20px;
  flex-shrink: 0;
}

.list-info {
  flex: 1;
}

.list-title {
  font-weight: 500;
  color: #1e293b;
  margin-bottom: 4px;
}

.list-desc {
  font-size: 12px;
  color: #94a3b8;
}

.list-amount {
  font-weight: 600;
  font-size: 14px;
  flex-shrink: 0;
}

.list-amount.income {
  color: #10b981;
}

.list-amount.expense {
  color: #ef4444;
}

/* 统计卡片 */
.stat-card {
  background: linear-gradient(135deg, #2563eb 0%, #1d4ed8 100%);
  color: white;
  border-radius: 12px;
  padding: 20px;
  margin-bottom: 16px;
}

.stat-card.income {
  background: linear-gradient(135deg, #10b981 0%, #059669 100%);
}

.stat-card.expense {
  background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
}

.stat-card.balance {
  background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
}

.stat-label {
  font-size: 13px;
  opacity: 0.9;
  margin-bottom: 8px;
}

.stat-value {
  font-size: 28px;
  font-weight: 700;
}

/* 分类网格 */
.category-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 10px;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 12px 8px;
  border: 2px solid #e2e8f0;
  border-radius: 10px;
  cursor: pointer;
  transition: all 0.2s;
}

.category-item.selected {
  border-color: #2563eb;
  background: #dbeafe;
}

.category-icon {
  font-size: 24px;
  margin-bottom: 6px;
}

.category-name {
  font-size: 11px;
  font-weight: 500;
  text-align: center;
  color: #475569;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60px 20px;
  text-align: center;
  color: #94a3b8;
}

.empty-title {
  font-size: 16px;
  font-weight: 600;
  color: #475569;
}

/* 标签页 */
.tabs {
  display: flex;
  border-bottom: 1px solid #e2e8f0;
  margin-bottom: 16px;
}

.tab {
  flex: 1;
  padding: 12px 0;
  text-align: center;
  color: #94a3b8;
  font-weight: 500;
  border-bottom: 3px solid transparent;
  position: relative;
}

.tab.active {
  color: #2563eb;
  border-bottom-color: #2563eb;
}

/* 类型选择按钮 */
.type-buttons {
  display: flex;
  gap: 12px;
  margin-bottom: 16px;
}

.type-btn {
  flex: 1;
  padding: 12px 16px;
  border: 2px solid #e2e8f0;
  border-radius: 8px;
  background: white;
  font-size: 14px;
  font-weight: 600;
  cursor: pointer;
}

.type-btn.expense {
  border-color: #fecaca;
  background: #fef2f2;
  color: #991b1b;
}

.type-btn.expense.active {
  border-color: #dc2626;
  background: #fee2e2;
}

.type-btn.income {
  border-color: #bbf7d0;
  background: #f0fdf4;
  color: #166534;
}

.type-btn.income.active {
  border-color: #16a34a;
  background: #dcfce7;
}

/* 网格布局 */
.grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 16px;
}

.grid-1 {
  grid-template-columns: 1fr;
}

.grid-2 {
  grid-template-columns: repeat(2, 1fr);
}
