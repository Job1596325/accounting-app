/* pages/list/list.wxss */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.content {
  flex: 1;
  overflow-y: auto;
  padding: 16px;
}

.card {
  background: white;
  border-radius: 12px;
  padding: 16px;
  border: 1px solid #e2e8f0;
}

.card-title {
  font-size: 16px;
  font-weight: 600;
  margin-bottom: 12px;
  color: #1e293b;
}

.tabs {
  display: flex;
  border-bottom: 1px solid #e2e8f0;
  margin-bottom: 16px;
}

.tab {
  flex: 1;
  padding: 12px 0;
  text-align: center;
  color: #94a3b8;
  font-weight: 500;
  border-bottom: 3px solid transparent;
  position: relative;
}

.tab.active {
  color: #2563eb;
  border-bottom-color: #2563eb;
}

.list-item {
  display: flex;
  align-items: center;
  padding: 12px 0;
  border-bottom: 1px solid #f1f5f9;
  gap: 12px;
}

.list-item:last-child {
  border-bottom: none;
}

.list-icon {
  width: 40px;
  height: 40px;
  border-radius: 10px;
  background: #f1f5f9;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20px;
  flex-shrink: 0;
}

.list-info {
  flex: 1;
}

.list-title {
  font-weight: 500;
  color: #1e293b;
  margin-bottom: 4px;
}

.list-desc {
  font-size: 12px;
  color: #94a3b8;
}

.list-amount {
  font-weight: 600;
  font-size: 14px;
  flex-shrink: 0;
}

.list-amount.income {
  color: #10b981;
}

.list-amount.expense {
  color: #ef4444;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60px 20px;
  text-align: center;
  color: #94a3b8;
}

.empty-title {
  font-size: 16px;
  font-weight: 600;
  color: #475569;
}
