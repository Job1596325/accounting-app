/* pages/index/index.wxss */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.content {
  flex: 1;
  overflow-y: auto;
  padding: 16px;
}

.stat-card {
  background: linear-gradient(135deg, #2563eb 0%, #1d4ed8 100%);
  color: white;
  border-radius: 12px;
  padding: 20px;
  margin-bottom: 0;
}

.stat-card.income {
  background: linear-gradient(135deg, #10b981 0%, #059669 100%);
}

.stat-card.expense {
  background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
}

.stat-card.balance {
  background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
}

.stat-label {
  font-size: 13px;
  opacity: 0.9;
  margin-bottom: 8px;
}

.stat-value {
  font-size: 24px;
  font-weight: 700;
}
